@using SayIt.Models;
@model IEnumerable<Message>

@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        if (item.Sender_Id == ((User)Session["user"]).Id)
        {
            <li class="ChatLog__entry ChatLog__entry_mine">
                <img class="ChatLog__avatar" src='~/Profile_Pictures/profile_@(((User)Session["User"]).Id).jpg' />
                <p class="ChatLog__message">
                    @item.Message1
                    <time class="ChatLog__timestamp">@item.Date_Time</time>
                </p>
            </li>
        }
        else
        {
            <li class="ChatLog__entry">
                <img class="ChatLog__avatar" src='~/Profile_Pictures/profile_@(item.Sender_Id).jpg' />
                <p class="ChatLog__message">
                    @item.Message1
                    <time class="ChatLog__timestamp">@item.Date_Time</time>
                </p>
            </li>
        }
    }
}
else
{
    <h3 class="noMessage">Start conversation now.</h3>
}