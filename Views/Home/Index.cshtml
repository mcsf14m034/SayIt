@{
    Layout = null;
}

@using SayIt.Models
@model User

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Index.css" rel="stylesheet" />
    <link rel="icon" href="~/Content/logo.png" type="image/png" />
    <title>Say It</title>
</head>
<body>
    <div class="container-fluid">
        <!--Navbar-->
        <nav>
            <div class="row">
                <div class="col-md-12">
                    <a class="btn navbar-btn button" href="#">Features</a>
                    <a class="btn navbar-btn button" href="#">About</a>
                    <a class="btn navbar-btn button" href="#">Contact Us</a>
                </div>
            </div>
        </nav>
        
        <!--Section-->
        <section>
            <div class="row">
                <div id="login" class="col-md-3 col-md-offset-1">
                    <img id="logo" class="img-responsive" src="~/Content/logo.png" alt="SayIt Logo" />
                    <h1 id="title">Say It</h1>
                    <p id="title_description">Sign in to get started.</p>
                    <p id="failMessage">@TempData["FailureMessage"]</p>
                    <p id="successMessage">@TempData["SuccessMessage"]</p>
                    <form action="/Accounts/Login" method="post">
                        <div class="form-group">
                            <input class="form-control field" type="email" name="email" placeholder="Email" autofocus="autofocus" required="required" />
                        </div>
                        <div class="form-group">
                            <input class="form-control field" type="password" name="password" placeholder="Password" required="required" />
                        </div>
                        <div class="form-group">
                            <input class="btn btn-block button" type="submit" value="Sign In" />
                        </div>
                    </form>
                    <p id="forgot"><a href="/Accounts/ForgotPassword">Forgot password?</a></p>
                    <p id="signup">Don't have account? <a href="/Accounts/Signup">Sign up here</a></p>
                </div>
                <div class="col-md-8">
                    <img class="img-responsive" src="~/Content/view.png" alt="View" />
                </div>
            </div>
        </section>

        <!--Footer-->
        <footer>
            <div class="row">
                <div class="col-md-12 panel-footer">
                    <small>All rights reserved. &copy; Say It @DateTime.Now.Year.</small>
                </div>
            </div>
        </footer>
    </div>
    <script src="~/Scripts/jquery-2.2.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>